<% if notice %> 
<p id="notice"><%= notice %></p> 
<% end %>

<h1>Your Pragmatic Catalog</h1>

<% @products.each do |product| %>
  <div class="entry"> 
    <%= link_to image_tag(product.image_url, :mouseover => "/images/cat.jpg"), 
 				product_path(product) %> 

    <h3><%= product.title %></h3> 

    		<%=sanitize product.description %> 

    <div class="price_line">
      <span class="price">
				<%= number_to_currency(product.price) %>
				<%= button_to 'Add to cart', line_items_path(:product_id => product), :remove => true %>
			</span> 
		</div>
  </div>
<% end %>